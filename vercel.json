{
  "version": 2,
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=4096' next build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "NEXT_RUNTIME": "nodejs",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "nodeVersion": "18.x"
      }
    }
  ]
}
